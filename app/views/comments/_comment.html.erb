<blockquote class="comment" id="comment<%= comment.id %>">
  <small>
    <%= user_with_gravatar comment.user %> wrote <%= time_distance_with_tooltip comment.created_at %> ago <% if comment.updated_at > comment.created_at %><em>(last edited <%= time_distance_with_tooltip(comment.updated_at) %> ago)</em><% end %> [ <%= link_to "#", "#comment#{comment.id}", name: "comment#{comment.id}" %><% if comment.modifiable? %> | <%= link_to "edit", edit_project_task_comment_path(@project, @task, comment), remote: true %> | <%= link_to "delete", project_task_comment_path(@project, @task, comment), data: { method: :delete, confirm: t("confirm.prompt") } %><% end %> ]
  </small>
  <div><%= render_markdown(comment.text) %></div>
</blockquote>
