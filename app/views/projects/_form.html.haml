.col-sm-5
  = form_for @project do |f|
    .form-group= f.text_field :name, class: "form-control", placeholder: t("project.name")
    .form-group= f.text_area :details, class: "form-control", placeholder: t("project.details"), rows: 5
    .form_group= f.label t("project.owner")
    .form-group= user_with_gravatar @project.owner
    .form-group= f.label :user_ids, t("project.participants")
    .form-group= select :project, :user_ids, options_for_select(@users, @project.user_ids), { include_blank: true }, multiple: true, class: "form-control"
    .form-group= f.submit t("project.create_project"), class: "btn btn-primary btn-block"

:coffeescript
  $("#project_user_ids").select2()
