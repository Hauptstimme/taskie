<blockquote class="blockquote-orange">
  <small>
    <%= user_with_gravatar activity.owner, alt: "someone" %>
    <% case activity.parameters[:type] %>
    <% when "full" %>
      updated this task
    <% when "status" %>
      changed status to <%= status_to_label activity.parameters[:changes] %>
    <% else %>
      somehow updated this task
    <% end %>
    <%= time_distance_with_tooltip activity.created_at %> ago
  </small>
</blockquote>
